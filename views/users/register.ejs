
<%- include('../partials/header.ejs') %>
<div class="row">
    <div class="col-3 mx-auto my-5">
        REGISTER
        <form class="my-3 " action="/register" method="post" >
            <div class="form-floating mb-3">
                <input name="username" type="email" class="form-control" id="email" placeholder="name@example.com"
                    required>
                <label for="email">Email address</label>
            </div>
            <div class="form-floating">
                <input name="password" type="password" class="form-control" id="password" placeholder="Password">
                <label for="password">Password</label> 
            </div>
            <input class=" mt-3 btn btn-primary" type="submit" value="Register">
        </form>
    </div>
</div>
